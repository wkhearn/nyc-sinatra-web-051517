<h1>New Figure</h1>

<form action="/figures" method="post">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name"><br>
  <h3>Titles</h3>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
  <label for="title_<%= title.id %>"><%= title.name %></label><br>
  <% end %>
  <label>New Title</label>
  <input type="text" name="title[name]" id="new_title"><br>
  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
  <label for="landmark_<%= landmark.id %>"><%= landmark.name %></label><br>
  <% end %>
  <label>New Landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <button type="submit">Create New Figure</button>
</form>
